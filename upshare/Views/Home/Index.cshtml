                        <div class="col-12">
                            <span class="material-symbols-outlined">handyman</span>
                        </div>
                        <div class="col-12">
                            <span>Tools</span>
                        </div>
                    </div>
                </button>
            </div>
            <div class="col-auto">
                <button type="button" class="btn btn-success category-btn mx-2">
                    <div class="row">
                        <div class="col-12">
                            <span class="material-symbols-outlined">smartphone</span>
                        </div>
                        <div class="col-12">
                            <span>Gadgets</span>
                        </div>
                    </div>
                </button>
            </div>
        </div>
    </div>

</section>
