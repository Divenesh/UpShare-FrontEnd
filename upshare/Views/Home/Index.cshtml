        <div class="row justify-content-center mb-3">
            <div class="col-auto">
                <button type="button" class="btn btn-success category-btn mx-2">
                    <div class="row">
                        <div class="col-12">
                            <span class="material-symbols-outlined">hiking</span>
                        </div>
                        <div class="col-12">
                            <span>Sports</span>
                        </div>
                    </div>
                </button>
            </div>
            <div class="col-auto">
                <button type="button" class="btn btn-success category-btn mx-2">
                    <div class="row">
                        <div class="col-12">
                            <span class="material-symbols-outlined">apparel</span>
                        </div>
                        <div class="col-12">
                            <span>Clothings</span>
                        </div>
                    </div>
                </button>
            </div>
            <div class="col-auto">
                <button type="button" class="btn btn-success category-btn mx-2">
                    <div class="row">
                        <div class="col-12">
                            <span class="material-symbols-outlined">pending</span>
                        </div>
                        <div class="col-12">
                            <span>More</span>
                        </div>
                    </div>
                </button>
            </div>
            <div class="col-auto">
                <button type="button" class="btn btn-success category-btn mx-2">
